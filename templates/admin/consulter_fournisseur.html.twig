{% extends "base.html.twig" %} {% block title %}Liste des utilisateurs{%
endblock %} {% block body %}
<style>
  .titre {
    color: #30a7ab;
    font-size: xx-large;
    text-decoration: none;
    text-transform: uppercase;
    font-weight: bold;
  }
  .titre span:hover {
    text-decoration: none;
    color: blue;
    width: auto;
  }
  .carte {
    width: fit-content;
  }
  .image-img {
    width: 200px;
    height: 200px;
  }
  footer {
    background-color: #1a2c2d;
    width: 100%;
    color: white;
    height: auto;
    padding-top: 10px;
    position: fixed;
    bottom: 0;
    font-family: calibre;
    margin-top: 25px;
  }
  footer div i {
    color: white;
  }
  footer i:hover {
    color: grey;
  }
  .page {
    width: 100%;
    height: 500px;
    overflow: auto;
  }
</style>
<div class="container-fluid"><br /><br /><br /><br /></div>
<div class="container-fluid">
  <div class="page">
    <div class="row">
      <div class="col-12 col-md-12 col-lg-12 col-xxl-12">
        <h1 class="titre text-center"><span>Liste des fournisseurs</span></h1>
      </div>
    </div>
    <div class="row">
      <div class="col-12 col-md-12 col-lg-12 col-xxl-12">
        <table class="table">
          <thead class="table-dark">
            <td>Id</td>
            <td>Nom</td>
            <td>Prénom</td>
            <td>Tel</td>
            <td>Email</td>
            <td>Role</td>
            <td>Username</td>
            <td>Gouvernorat</td>
            <td>Adresse</td>
            <td colspan="5" class="text-center">Action</td>
          </thead>
          {% for client in fournisseurs %}
          <tr>
            <td>{{ client.id }}</td>
            <td>{{ client.nom }}</td>
            <td>{{ client.prenom }}</td>
            <td>{{ client.tel }}</td>
            <td>{{ client.email }}</td>
            <td>Fournisseur</td>
            <td>{{ client.nomU }}</td>
            <td>{{ client.gouvernorat }}</td>
            <td>{{ client.adresse }}</td>
            <td>
              <a
                href="{{
                  path('app_consulter_fournisseur', { user: client.id })
                }}"
                class="btn btn-info"
                >voir détails</a
              >
            </td>
            {% if client.isBlocked %}
            <td>
              <a
                href="{{ path('app_user_unlock', { user: client.id }) }}"
                class="btn btn-warning"
                >Débloquer</a
              >
            </td>
            {% else %}
            <td>
              <a
                href="{{ path('app_user_lock', { user: client.id }) }}"
                class="btn btn-danger"
                >Bloquer</a
              >
            </td>
            {% endif %}
            <td>
              <a
                href="{{
                  path('app_mes_conversations', {
                    user: client.id
                  })
                }}"
                class="btn btn-primary"
                >voir tchatte</a
              >
            </td>
            <td></td>
            <td></td>
          </tr>
          {% endfor %}
        </table>
      </div>
    </div>
  </div>
</div>
<div class="container-fluid"><br /><br /><br /><br /><br /></div>
<footer>
  <div class="row">
    <div class="col-12 col-md-12 col-lg-12 col-xxl-12 text-center">
      <p style="color: white">
        <i
          class="fa fa-facebook-official w3-hover-opacity"
          style="color: white"
        ></i>
        <i class="fa fa-twitter w3-hover-opacity" style="color: white"></i>
        <i class="fa fa-instagram w3-hover-opacity" style="color: white"></i>
        <br />
        &copy; 2021 SAHEELHA. Tous les droits sont réservés
      </p>
    </div>
  </div>
</footer>
